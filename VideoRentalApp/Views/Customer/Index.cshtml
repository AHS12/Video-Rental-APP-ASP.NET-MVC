<table class="table table-bordered table-hover">
    <thead class="table-active">
        <tr>
            <td>Customer</td>
            <td>MemberShip</td>
            <td>Action</td>
        </tr>
    </thead>
    <tbody>

        @foreach (var customer in Model)
        {

            <tr>
                <td>@Html.ActionLink(customer.Name, "Details", "Customer", routeValues: new { id = customer.Id }, htmlAttributes: new { @class = "active" })</td>
                <td>@customer.MemberShipType.Name</td>
                <td><button class="btn btn-info">@Html.ActionLink("Edit", "Edit", "Customer", routeValues: new { id = customer.Id }, htmlAttributes: new { @class = "active" })</button></td>
            </tr>
        }

    </tbody>
</table>


