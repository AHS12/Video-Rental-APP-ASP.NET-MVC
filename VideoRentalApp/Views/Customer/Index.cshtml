@using System.Web.UI.WebControls
@using VideoRentalAPP.Models
@model IEnumerable<VideoRentalAPP.Models.Customer>

@{
    ViewBag.Title = "Customers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
}

